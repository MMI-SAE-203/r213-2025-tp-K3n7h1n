---
const { adresse, nomMaison, prix } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-lg mt-4">
    <ul class="space-y-2">
        <li class="text-gray-700 font-semibold">{adresse}</li>
        <li class="text-gray-700">{nomMaison}</li>
        <li class="text-gray-700">{prix}$</li>
    </ul>
    <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" x-on:click="favori = !favori">favori</button>
</div>

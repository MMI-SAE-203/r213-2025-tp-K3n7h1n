---
const { ...offre } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-lg mt-4">
    <ul class="space-y-2 mb-4">
        <li class="text-gray-700 font-semibold">{offre.adresse}</li>
        <li class="text-gray-700 text-xl font-bold">{offre.nomMaison}</li>
        <li class="text-gray-700 font-bold text-2xl">{offre.prix}â‚¬</li>
        <img class="w-full h-48 object-cover rounded" src={offre.img || "/placeholder.svg"} alt={offre.nomMaison} />
    </ul>
    <button 
        class={`mt-4 w-full text-white font-bold py-2 px-4 rounded transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 ${
            offre.favori 
                ? 'bg-red-500 hover:bg-red-600 focus:ring-red-500 ' 
                : 'bg-yellow-500 hover:bg-yellow-600 focus:ring-yellow-500'
        }`}
        onclick="toggleFavori(this, '${offre.id}')"
    >
        {offre.favori ? 'Non favoris' : 'Favoris'}
    </button>
</div>